<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_material_dark"
    android:minWidth="300dp"
    >

    <TextView
        android:id="@+id/title"
        style="@style/Widget.PostOffice.Material.Dark.Dialog.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        tools:text="Some title"
        />

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <!-- By Default use a TextView here -->
        <TextView
            android:id="@+id/message"
            style="@style/Widget.PostOffice.Material.Dark.Dialog.Message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/material_spacing"
            android:layout_marginLeft="@dimen/material_spacing"
            android:layout_marginRight="@dimen/material_spacing"

            tools:text="This is an example of some dialog content warning or telling the user some message. Lorem ipsum dolor set something something something need to burn more space.. ahahahahhahah"
            />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"

        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        >

        <!-- This is the container for all the material design buttons -->


    </LinearLayout>


</LinearLayout>